# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Azure SQL Database
DB_SERVER=your-server.database.windows.net
DB_NAME=very_good_auctions
DB_USER=sqladmin
DB_PASSWORD=your-secure-password

# Microsoft Entra External ID
# (Replaces deprecated Azure AD B2C)
ENTRA_TENANT_NAME=your-tenant-subdomain
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=auction-images

# Azure SignalR
AZURE_SIGNALR_CONNECTION_STRING=Endpoint=https://...

# Azure Key Vault (optional - for production)
KEY_VAULT_URI=https://your-keyvault.vault.azure.net/

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Insights (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...
